@FontHeader: Noto Sans, Liberation Sans,Arial,Helvetica,sans-serif;

@clBodyBG: #bef2c1;
@clBodyFG: @clArticleFG;

@clArticleBG: rgba(255, 255, 255, 0.9);  //@clMono3;
@clArticleBGO: #ffffff;  //@clMono3;
@clArticleFG: @clMono0;

@clLinkOnLight: @clPrimary0;
@clLinkOnDark: #40c0ff;

@clDialogBG: #ffffff;
@clDialogFG: #000000;
@widthDlg: 640px;
@heightDlg: 480px;


@clHeaderBG: @clMono3;
@clHeaderFG: @clPrimary0;

@clPanelBG: rgba(64, 64, 64, 0.8);
@clPanelFG: white;

@buttonWidth: 256px;
@buttonHeight: 32px;

@clButtonBG: #404040;
@clButtonFG: #ffffff;
@clButtonActiveBG: #c0c0c0;
@clButtonActiveFG: #000000;

@toolButtonSize: 28px;
@toolIconSize: 20px;

@btnShadow: none; // -1px 1px 4px 1px #fff;
@btnShadowA: -1px 1px 4px 1px rgba(0, 0, 0, 0.8);
@Radius: 0px;     // 4px;
@Shadow: none; //-1px 1px 2px 4px rgba(0, 0, 0, 0.2);  // -1px 1px 4px 1px rgba(0, 0, 0, 0.8);
@Opacity: 0.95;

@clNotifyBG: @clSecondary20;
