@clNotPublished: #a0a0a0;

@marginX: 8px;
@marginY: 8px;


// Inline SVG code images in LESS CSS
.inline-svg-code( @code ) {
  @-svg-code: escape(~'<?xml version="1.0" ?>@{code}');
  @-inline-svg-code: ~'data:image/svg+xml,@{-svg-code}';
  @-inline-svg-url: ~"url('@{-inline-svg-code}')";
}