@clThreadLink: @clLinkOnLight;

@clAvatarBG: rgba(0, 64, 160, 0.5);     //#0040a0;
@clAvatarFG: #ffffff;

@borderQuote: 2px solid #808080;
@borderEdit: 2px solid #808080;

@clSeparator: #808080;


@clMsgInfoBG: green;
@clMsgInfoFG: white;

@clMsgErrorBG: red;
@clMsgErrorFG: white;

@clMsgWarningBG: yellow;
