@FontMain: Noto Sans, Liberation Sans,Arial,Helvetica,sans-serif;
@FontSzMain: 14px;

@FontMono: Consolas,Menlo,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New,monospace,sans-serif;
